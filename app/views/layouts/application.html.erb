<!DOCTYPE html>
<html>
<head>
  <title>HeroMaker - ヒーロー育成ゲーム</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
  <%= link_to(image_tag('hm_logo.png', :size => '128x32', :alt => 'サイトロゴ'),
              :root ) %>
  <%= "ログインユーザ： " + current_user.name + "[" if current_user %>
  <%= link_to('編集', [ :edit, :user_registration ]) if current_user %>
  <%= "]" if current_user if current_user %>
  <%= "[" if current_user.is_admin %>
  <%= link_to('管理', [ :admin, :index ]) if current_user.is_admin %>
  <%= "]" if current_user if current_user.is_admin %>
  <%= link_to('Sign out', [ :destroy, :user_session ], :class => 'signOut', :method => :delete) if current_user %>
</div>

<div id="contents">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>

</body>
</html>
